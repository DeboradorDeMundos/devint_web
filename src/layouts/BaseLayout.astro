---
import SEO from "../components/seo/SEO.astro";

export interface Props {
  title: string;
  description?: string;
  image?: string;
  seo?: {
    canonical?: string;
    type?: "website" | "article" | "product";
    keywords?: string;
    author?: string;
    publishedTime?: string;
    modifiedTime?: string;
    noindex?: boolean;
  };
}

const {
  title,
  description =
    "Devint - Tu partner tecnológico. Desarrollo de software, aplicaciones móviles, páginas web, integraciones y consultoría especializada.",
  image = "/images/hero-cover.svg",
  seo = {},
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
<head>
  <SEO
    title={title}
    description={description}
    image={image}
    canonical={seo.canonical}
    type={seo.type}
    keywords={seo.keywords}
    author={seo.author}
    publishedTime={seo.publishedTime}
    modifiedTime={seo.modifiedTime}
    noindex={seo.noindex}
  />
  <slot name="head" />
</head>
<body class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white font-['Inter'] relative">
  <!-- Background Pattern -->
  <div class="fixed inset-0 opacity-5 pointer-events-none">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 25%, rgba(16, 185, 129, 0.1) 0%, transparent 25%), radial-gradient(circle at 75% 75%, rgba(6, 182, 212, 0.08) 0%, transparent 25%);"></div>
  </div>
  
  <slot />
  
  <!-- Scripts -->
  <script>
    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  </script>
</body>
</html>
