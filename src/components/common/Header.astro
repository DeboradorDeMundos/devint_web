<header class="fixed top-0 w-full bg-slate-900/95 backdrop-blur-sm border-b border-slate-800 z-50">
  <div class="container mx-auto px-6">
    <div class="flex items-center justify-between h-20">
      
      <!-- Logo -->
      <div class="flex items-center space-x-3">
        <div class="w-10 h-10 rounded-lg flex items-center justify-center overflow-hidden">
          <img src="/images/devint-icon.png" alt="Devint Logo" class="w-full h-full object-contain" />
        </div>
        <span class="text-xl font-semibold text-white">Devint</span>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-white hover:text-emerald-400 transition-colors duration-300 font-medium">
          HOME
        </a>
        <a href="/servicios" class="text-white hover:text-emerald-400 transition-colors duration-300 font-medium">
          SERVICIO
        </a>
        <a href="/nosotros" class="text-white hover:text-emerald-400 transition-colors duration-300 font-medium">
          EMPRESA
        </a>
        <a href="/contacto" class="text-white hover:text-emerald-400 transition-colors duration-300 font-medium">
          CONTACTO
        </a>
      </nav>

      <!-- CTA Button -->
      <div class="hidden md:block">
        <a href="/contacto" class="bg-gradient-to-r from-emerald-500 to-cyan-500 text-white px-6 py-3 rounded-full font-medium hover:from-emerald-600 hover:to-cyan-600 transition-all duration-300 shadow-lg hover:shadow-emerald-500/25">
          Cotizar Proyecto
        </a>
      </div>

      <!-- Mobile menu button -->
      <button class="md:hidden text-white" id="mobile-menu-button">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="py-4 border-t border-slate-800">
        <a href="/" class="block py-2 text-white hover:text-emerald-400 transition-colors duration-300">
          HOME
        </a>
        <a href="/servicios" class="block py-2 text-white hover:text-emerald-400 transition-colors duration-300">
          SERVICIO
        </a>
        <a href="/nosotros" class="block py-2 text-white hover:text-emerald-400 transition-colors duration-300">
          EMPRESA
        </a>
        <a href="/contacto" class="block py-2 text-white hover:text-emerald-400 transition-colors duration-300">
          CONTACTO
        </a>
        <div class="pt-4">
          <a href="/contacto" class="bg-gradient-to-r from-emerald-500 to-cyan-500 text-white px-6 py-3 rounded-full font-medium inline-block">
            Cotizar Proyecto
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
